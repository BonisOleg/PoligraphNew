root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyw}]
indent_style = space
indent_size = 4
max_line_length = 119

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# Django HTML шаблони - НЕ форматувати автоматично
# Важливо: Django теги ({% %}, {{ }}) не повинні форматуватися
[*.html]
indent_style = space
indent_size = 2
max_line_length = off
# Вимкнути автоматичне форматування для HTML
trim_trailing_whitespace = false
